generator kysely {
  provider = "prisma-kysely"
  fileName = "../../lib/types/types_generated.ts"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Media {
  id              Int     @id @default(autoincrement())
  artUrl          String?
  contentRating   String?
  duration        Int?
  guid            String?
  index           Int?
  libraryKey      String?
  parentIndex     Int?
  parentKey       String?
  parentRatingKey String?
  parentTheme     String?
  parentThumb     String?
  parentTitle     String?
  rating          Float?
  ratingKey       String  @unique
  summary         String?
  thumbUrl        String?
  title           String
  type            Int     @default(0)
  year            Int?
  serverId        Int     @default(1)
  server          Server  @relation(fields: [serverId], references: [id])
}

model Configuration {
  id                  Int     @id @default(autoincrement())
  tmdbApiKey          String?
  fanartApiKey        String?
  removeOverlays      Int     @default(0)
  thePosterDbEmail    String?
  thePosterDbPassword String?
}

model Server {
  id     Int     @id @default(autoincrement())
  name   String
  url    String
  token  String
  userid String?
  type   String
  media Media[]
}
